name: Push to AWS S3
run-name: ${{ github.actor }} is running this GitHub Actions pipeline ðŸš€
on: [push]
jobs:
  push-to-s3:
    runs-on: ubuntu-latest
    steps:
      - name: Check out repository code
        uses: actions/checkout@v4
        
      - name: Run npm install
        run: npm install
        
      - name: Run npm build
        run: npm run build
        
      - name: Create filtered build directory for HTML and CSS files
        run: |
          mkdir filtered-build
          find build -type f \( -name "*.html" -o -name "*.css" \) -exec cp --parents {} filtered-build \;
        
      - name: List the filtered build directory
        run: ls filtered-build

      - name: Upload to S3
        uses: jakejarvis/s3-sync-action@master
        with:
          args: --acl public-read --follow-symlinks --delete
        env:
          SOURCE_DIR: filtered-build/
          AWS_S3_BUCKET: ${{ secrets.AWS_S3_BUCKET }}
          AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
          AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
